{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Jargon Terms",
    "type": "object",
    "properties": {
        "terms": {
            "type": "object",
            "patternProperties": {
                "^.+$": {
                    "anyOf": [
                        {
                            "type": "null"
                        },
                        {
                            "type": "object",
                            "properties": {
                                "plural": {
                                    "type": "string"
                                },
                                "expanded_form": {
                                    "type": "string"
                                },
                                "categories": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                },
                                "disambiguation": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                }
                            },
                            "additionalProperties": false
                        }

                    ]
                }
            }
        }
    },
    "required": [
        "terms"
    ],
    "additionalProperties": false
}